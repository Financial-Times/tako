{
  "name": "tako",
  "version": "1.0.0",
  "description": "A GitHub application that helps maintian a large number of repositories in a GitHub organisation.",
  "author": "Braimbridge, Adam <adam@braimbridge.com> (https://github.com/adambraimbridge)",
  "license": "MIT",
  "repository": "https://github.com/financial-times-sandbox/tako.git",
  "homepage": "https://github.com/financial-times-sandbox/tako",
  "bugs": "https://github.com/financial-times-sandbox/tako/issues",
  "keywords": [
    "probot",
    "github",
    "probot-app"
  ],
  "scripts": {
    "dev": "nodemon",
    "start": "probot run ./index.js",
    "lint": "standard --fix",
    "test": "jest && standard",
    "test:watch": "jest --watch --notify --notifyMode=change --coverage"
  },
  "dependencies": {
    "probot": "^7.2.0"
  },
  "devDependencies": {
    "jest": "^22.4.3",
    "nodemon": "^1.17.2",
    "smee-client": "^1.0.2",
    "standard": "^10.0.3",
    "typescript": "^3.1.1"
  },
  "engines": {
    "node": ">= 8.3.0"
  },
  "standard": {
    "env": [
      "jest"
    ]
  },
  "jest": {
    "testEnvironment": "node"
  },
  "nodemonConfig": {
    "exec": "npm start",
    "watch": [
      ".env",
      "."
    ]
  }
}
