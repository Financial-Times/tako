{
  "name": "tako",
  "version": "1.0.0",
  "description": "A GitHub application that helps maintian a large number of repositories in a GitHub organisation.",
  "author": "Braimbridge, Adam <adam@braimbridge.com> (https://github.com/adambraimbridge)",
  "license": "MIT",
  "repository": "https://github.com/financial-times-sandbox/tako.git",
  "homepage": "https://github.com/financial-times-sandbox/tako",
  "bugs": "https://github.com/financial-times-sandbox/tako/issues",
  "keywords": [
    "probot",
    "github",
    "probot-app"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "nodemon --exec \"npm start\"",
    "start": "probot run ./lib/index.js",
    "lint": "standard **/*.ts --fix",
    "test": "jest && standard **/*.ts",
    "test:watch": "jest --watch --notify --notifyMode=change --coverage"
  },
  "dependencies": {
    "probot": "^7.2.0"
  },
  "devDependencies": {
    "@types/jest": "^23.3.4",
    "@types/node": "^10.11.5",
    "eslint-plugin-typescript": "^0.12.0",
    "jest": "^23.6.0",
    "nodemon": "^1.18.4",
    "smee-client": "^1.0.2",
    "standard": "^12.0.1",
    "ts-jest": "^23.10.4",
    "typescript": "^3.1.1",
    "typescript-eslint-parser": "^20.0.0"
  },
  "engines": {
    "node": ">= 8.12.0"
  },
  "standard": {
    "parser": "typescript-eslint-parser",
    "env": [
      "jest"
    ],
    "plugins": [
      "typescript"
    ]
  }
}
