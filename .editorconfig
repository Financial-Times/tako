# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true

[*.js]
trim_trailing_whitespace = true
indent_style = tab

[*.{json,yml,yaml,md}]
trim_trailing_whitespace = true
indent_size = 2
indent_style = space
